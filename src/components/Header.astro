---
// You can define props here if needed
import { Image } from "astro:assets";
import SideBarFooter from "../components//SideBarFooter.astro";
const { activeItemID } = Astro.props;
---


<div
  class="sticky top-0 z-30 flex h-18 w-full justify-center bg-opacity-100 backdrop-blur transition-all duration-100 bg-base-100 text-base-content shadow-lg"
>
  <div class="navbar w-5/6 max-w-[100vw] mx-auto">
    <div class="navbar-start">
      <label for="my-drawer" class="btn btn-square btn-ghost hover:bg-[#d6e1db] rounded-full">
        <Image class="mask mask-circle" format="png" width={100} height={100} src="/HeadShot.png" style="width: 100%; height: auto;" alt="Profile image" />
      </label>
      <a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/#top">William Lamuth</a>
    </div>

    <!-- Hamburger Menu for mobile (lg:hidden) -->
    <div class="navbar-end lg:hidden">
      <button id="hamburger-menu" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>

    <!-- Menu links for large screens -->
    <div class="hidden lg:flex navbar-end">
      <a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/#projects">Projects</a>
      <a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/#about">About</a>
      <a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/William-Lamuth-Resume24.pdf" target="_blank">Resume</a>
    </div>
  </div>
</div>

<!-- Fixed Dropdown Menu for Mobile, stays in view when scrolling -->
<div id="navbar-default" class="hidden fixed top-16 left-0 w-full bg-base-100 shadow-lg z-40 lg:hidden">
  <ul class="flex flex-col items-center gap-2 p-4">
    <li><a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/#projects">Projects</a></li>
    <li><a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/#about">About</a></li>
    <li><a class="btn btn-ghost normal-case text-lg hover:bg-[#d6e1db] rounded-full" href="/William-Lamuth-Resume24.pdf" target="_blank">Resume</a></li>
  </ul>
</div>

<!-- Inline script block for navbar toggling -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.getElementById('hamburger-menu');
    const navbar = document.getElementById('navbar-default');

    if (toggleButton && navbar) {
      toggleButton.addEventListener('click', function() {
        navbar.classList.toggle('hidden');
      });
    } else {
      console.error('Navbar or toggle button not found');
    }
  });
</script>




